{
    "name": "jmf/class-list",
    "description" : "Retrieves the list of all the classes (actual and parent classes) of a given class or object.",
    "license": "mit",
    "type": "library",
    "require": {
        "php": ">=8.3",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "phing/phing": "^2.17",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.1",
        "rector/rector": "^1.0",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Jmf\\ClassList\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jmf\\ClassList\\": "tests/unit/src"
        }
    }
}
